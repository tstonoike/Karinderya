<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tentrep.karinderya.userstar"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taste:"
        android:id="@+id/textView"
        android:textSize="24sp"
        android:layout_below="@+id/textView4"
        android:paddingLeft="80sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sanitation:"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:layout_below="@+id/textView"
        android:paddingLeft="80sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu:"
        android:id="@+id/textView3"
        android:textSize="24sp"
        android:layout_below="@+id/textView2"
        android:paddingLeft="80sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average Rating:"
        android:id="@+id/textView4"
        android:layout_below="@+id/tv"
        android:layout_alignParentStart="true"
        android:textSize="35sp"
        android:paddingLeft="50sp"
        android:paddingTop="30sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Score"
        android:id="@+id/star1tv"
        android:layout_above="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Score"
        android:id="@+id/star2tv"
        android:textSize="24sp"
        android:layout_below="@+id/star1tv"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Score"
        android:id="@+id/star3tv"
        android:textSize="24sp"
        android:layout_below="@+id/star2tv"
        android:layout_toEndOf="@+id/textView2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ave"
        android:id="@+id/starave"
        android:textSize="35sp"
        android:paddingLeft="10sp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate it"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Rating"
        android:id="@+id/tv1"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:textSize="35sp"
        android:paddingLeft="80sp"
        android:paddingTop="40sp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taste:"
        android:id="@+id/tv2"
        android:textSize="24sp"
        android:layout_below="@+id/tv1"
        android:paddingLeft="100sp"
        android:paddingTop="8sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sanitation:"
        android:id="@+id/tv3"
        android:textSize="24sp"
        android:layout_below="@+id/tv2"
        android:paddingLeft="100sp"
        android:paddingTop="8sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu:"
        android:id="@+id/tv4"
        android:textSize="24sp"
        android:layout_below="@+id/tv3"
        android:paddingLeft="100sp"
        android:paddingTop="8sp"
        />





</RelativeLayout>
